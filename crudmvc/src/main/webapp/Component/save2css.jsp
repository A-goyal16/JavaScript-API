/* CSS for Form Layout */
form {
    width: 300px;
    margin: 0 auto;
}

label {
    display: block;
    margin-bottom: 5px;
}

input[type="text"] {
    width: calc(100% - 10px);
    padding: 5px;
    margin-bottom: 10px;
}

button {
    padding: 5px 10px;
    margin-top: 10px;
}

/* CSS for Displayed Data Layout */
#formDetails {
    margin-top: 20px;
}

#formDetails h2 {
    margin-bottom: 10px;
}

#formDetails p {
    margin-bottom: 5px;
}
